# GitHub Integration (Required for fetching repos, commits, and activity)
GITHUB_USERNAME=
# Optional: Provide a token to avoid GitHub API rate limits
GITHUB_TOKEN=

# Authentication & Admin
# AUTH_SECRET is used to sign session cookies (generate a secure random string)
AUTH_SECRET=
# ADMIN_SECRET is the command to access the terminal admin mode
ADMIN_SECRET=
# ADMIN_PASSWORD is the hashed password set on first login. Leave empty to use default (Change in production!)
ADMIN_PASSWORD=

# Database Configuration (PostgreSQL/NeonDB)
# Provided automatically by Vercel if using NeonDB integration
DATABASE_URL=
DATABASE_URL_UNPOOLED=

# External Services
# Google Gemini API key for AI newspaper content generation
GEMINI_API_KEY=
# Vercel Blob storage token for uploading the Resume PDF
BLOB_READ_WRITE_TOKEN=

# Site Configuration
# Canonical URL for SEO and RSS feeds (e.g., https://tremors.vercel.app or http://localhost:3000)
NEXT_PUBLIC_SITE_URL=
# Alternative URL used for CSRF protection checks
NEXT_PUBLIC_URL=

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=
NEXT_PUBLIC_LINKEDIN_URL=
